                                    @Html.ValidationMessageFor(model => model.RecdToComanyCode, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-1 mandatory"></div>
                                <div class="col-md-1"></div>
                            </div>

                        </div>
                        <div class="form-group col-md-12"></div>

