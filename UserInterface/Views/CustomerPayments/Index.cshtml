                <div class="col-md-12  ">
                    <div class="col-md-10">
                        <div class="form-group col-md-12">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.GeneralNotes, htmlAttributes: new { @class = "control-label" })


                            </div>
                            <div class="col-md-12">
