@model UserInterface.Models.AdminDashboardViewModel
@using UserInterface.App_Start
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    ViewBag.path = "Home / " + ViewBag.Title;
}
 
<div style="width:100%;">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div> 
<div class="col-md-12">
    &nbsp;
</div>
<div class="col-md-12">
    &nbsp;
</div>
<div class="col-md-12">
    @{
        var data = new { Company = "All" };
        @Html.Action("MonthlyRecap", "Dashboard", data);
    }
</div>
  
  
<div class="col-md-12">
    @{
        var data1 = new { Company = "All" };
        @Html.Action("ExpenseSummary", "Dashboard", data1);
    }
    <div class="col-md-6">
        <div class="col-md-12 ">
            <!-- Info Boxes Style 2 -->
            <div class="info-box bg-yellow">
                <span class="info-box-icon"><i class="ion ion-ios-pricetag-outline"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text">Outstanding Invoices (20) </span>
                    <span class="info-box-number">₹5,200</span>

                    <div class="progress">
                        <div class="progress-bar" style="width: 95%"></div>
                    </div>
                    <span class="progress-description">
                        (Last 365 Days)
                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
            <div class="info-box bg-green">
                <span class="info-box-icon"><i class="ion ion-ios-heart-outline"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text">Outstanding Payments(10)</span>
                    <span class="info-box-number">₹92,050</span>

                    <div class="progress">
                        <div class="progress-bar" style="width: 95%"></div>
                    </div>
                    <span class="progress-description">
                        (Last 365 Days)
                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>

        </div>

    </div>
</div>
   
