@model UserInterface.Models.AdminDashboardViewModel
@using UserInterface.App_Start
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    ViewBag.path = "Home / " + ViewBag.Title;
}
 
<div style="width:100%;">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div> 
<div class="col-md-12">
    &nbsp;
</div>
<div class="col-md-12">
    &nbsp;
</div>
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Monthly Recap Report</h3>

                <div class="box-tools pull-right">
                    @*<button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>*@                     
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <p class="text-center">
                            <strong>Sales: 1 Jan, 2017 - 30 Jul, 2017</strong>
                        </p>

                        <div class="chart">
                            <!-- Sales Chart Canvas -->
                            <canvas id="salesChart" style="height: 180px; width: 703px;" width="703" height="180"></canvas>
                        </div>
                        <!-- /.chart-responsive -->
                    </div>
                    <!-- /.col -->
                    
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- ./box-body -->
            <div class="box-footer">
                <div class="row">
                    <div class="col-sm-4 col-xs-6">
                        <div class="description-block border-right">
                            <span class="description-percentage text-green"><i class="fa fa-caret-up"></i> 17%</span>
                            <h5 class="description-header">₹35,210.43</h5>
                            <span class="description-text">TOTAL INCOME</span>
                        </div>
                        <!-- /.description-block -->
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-4 col-xs-6">
                        <div class="description-block border-right">
                            <span class="description-percentage text-yellow"><i class="fa fa-caret-left"></i> 0%</span>
                            <h5 class="description-header">₹10,390.90</h5>
                            <span class="description-text">TOTAL EXPENSE</span>
                        </div>
                        <!-- /.description-block -->
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-4 col-xs-6">
                        <div class="description-block">
                            <span class="description-percentage text-green"><i class="fa fa-caret-up"></i> 20%</span>
                            <h5 class="description-header">₹24,813.53</h5>
                            <span class="description-text">TOTAL PROFIT</span>
                        </div>
                        <!-- /.description-block -->
                    </div>
                   
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-footer -->
        </div>
        <!-- /.box -->
    </div>

<div class="col-md-6">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Expense Summary (July 2017)</h3>

             
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="chart-responsive">
                        <canvas id="pieChart" height="170" width="205" style="width: 205px; height: 170px;"></canvas>
                    </div>
                    <!-- ./chart-responsive -->
                </div>
                <!-- /.col -->
                <div class="col-md-4">
                    <ul class="chart-legend clearfix">
                        <li><i class="fa fa-circle-o text-red"></i> Salary</li>
                        <li><i class="fa fa-circle-o text-green"></i> Salary Advance</li>
                        <li><i class="fa fa-circle-o text-yellow"></i> Fuel</li>
                        <li><i class="fa fa-circle-o text-aqua"></i> Vehicle Rent</li>
                        <li><i class="fa fa-circle-o text-light-blue"></i> Office Expense</li>
                        <li><i class="fa fa-circle-o text-gray"></i> Misc</li>
                    </ul>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer no-padding">
            <div class="row">
                <div class="col-sm-4 col-xs-6">
                     
                </div>
                <!-- /.col -->
                <div class="col-sm-4 col-xs-6">
                    
                </div>
                <!-- /.col -->
                <div class="col-sm-4 col-xs-6">
                    <div class="description-block">
                        <span class="description-text">Total Expense</span>  
                        <h5 class="description-header">₹1,34,500</h5>
                       
                    </div>
                    <!-- /.description-block -->
                </div>

            </div>
        </div>
        <!-- /.footer -->
    </div>


</div>
