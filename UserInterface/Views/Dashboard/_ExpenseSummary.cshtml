            </div>
            <!-- /.row -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer no-padding">
            <div class="row">
                <div class="col-sm-4 col-xs-6">

                </div>
                <!-- /.col -->
                <div class="col-sm-4 col-xs-6">

                </div>
                <!-- /.col -->
                <div class="col-sm-4 col-xs-6">
                    <div class="description-block">
