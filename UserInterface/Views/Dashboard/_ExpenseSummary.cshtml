@model UserInterface.Models.ExpenseSummaryViewModel
@{
    List<UserInterface.Models.OtherExpSummaryItemViewModel> OEList = Model.OtherExpSummary.ItemsList;
}

<div class="col-md-6">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Expense Summary (@Model.OtherExpSummary.Month)</h3>


        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="chart-responsive">
                        <canvas id="pieChartM" height="170" width="205" style="width: 205px; height: 170px;"></canvas>
                    </div>
                    <!-- ./chart-responsive -->
                </div>
                <!-- /.col -->
                <div class="col-md-4">
                    <ul class="chart-legend clearfix">
                       @foreach (var mp in OEList)
                       {
                        <li><i class="fa fa-circle" style="color:@mp.color"></i> @mp.Head</li>
                       }
                        
                    </ul>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer no-padding">
            <div class="row">
                <div class="col-sm-4 col-xs-6">

                </div>
                <!-- /.col -->
                <div class="col-sm-4 col-xs-6">

                </div>
                <!-- /.col -->
                <div class="col-sm-4 col-xs-6">
                    <div class="description-block">
                        <span class="description-text">Total Expense</span>
                        <h5 class="description-header">@Model.OtherExpSummary.TotalFormatted</h5>

                    </div>
                    <!-- /.description-block -->
                </div>

            </div>
        </div>
        <!-- /.footer -->
    </div>


</div>



<script type="text/javascript">
    var ESModel = @Html.Raw(Json.Encode(Model));


</script>


