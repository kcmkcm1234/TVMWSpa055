@model UserInterface.Models.RecentDocumentsViewModel

<div class="col-md-6">

    <div class="box box-info">
        <div class="box-header with-border  ">
            <h3 class="box-title">@Model.Title</h3>
       

        </div>
        <div class="with-border @Model.Color " style="height:2px!important"></div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="table-responsive">
                <table class="table no-margin">
                    <thead>
                        <tr>
                            @if (Model.DocType == "CINV")
                            {
                                <th>Invoice No</th>
                                <th>Cust Name</th>
                                <th class="text-center">Value</th>
                                <th>Created By</th>
                                <th>Date</th>
                            }
                            else if (Model.DocType == "SINV")
                            {
                                <th>Invoice No</th>
                                <th>Supp Name</th>
                                <th class="text-center">Value</th>
                                <th>Created By</th>
                                <th>Date</th>
                            }
                            else if (Model.DocType == "CPAY")
                            {
                                <th>Entry No</th>
                                <th>Cust Name</th>
                                <th class="text-center">Value</th>
                                <th>Created By</th>
                                <th>Date</th>
                            }
                            else if (Model.DocType == "SPAY")
                            {
                                <th>Entry No</th>
                                <th>Supp Name</th>
                                <th class="text-center">Value</th>
                                <th>Created By</th>
                                <th>Date</th>
                            }
                            else if (Model.DocType == "OI")
                            {
                                <th>Ref No</th>
                                <th>Income Type</th>
                                <th class="text-center">Value</th>
                                <th>Created By</th>
                                <th>Date</th>
                            }
                            else if (Model.DocType == "OE")
                            {
                                <th>Expense Type</th>
                                <th>To</th>
                                <th class="text-center">Value</th>
                                <th>Created By</th>
                                <th>Date</th>
                            }
                            else
                            {

                                <th>Doc Name</th>
                                <th>Cust Name</th>
                                <th class="text-center">Value</th>
                                <th >Created By</th>
                                <th>Date</th>

                            }
                          
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Docs != null)
                        {
                            if (Model.Docs.DocItems != null)
                            {
                                for (int i = 0; i < Model.Docs.DocItems.Count; i++)
                                {
                                    <tr>
                                        <th>@Model.Docs.DocItems[i].DocNo</th>
                                        <td><a href="@Model.Docs.DocItems[i].URL">@Model.Docs.DocItems[i].Customer</a></td>
                                        <td class="text-right">@Model.Docs.DocItems[i].ValueFormatted</td>
                                        <td>@Model.Docs.DocItems[i].CreatedBy</td>
                                        <td><span class="label label-info">@Model.Docs.DocItems[i].CreatedDateFormatted</span></td>

                                    </tr>

                                }
                            }

                        }
                        @if (Model.Docs != null)
                        {
                            for (int i = (Model.Docs.DocItems == null ? 0 : Model.Docs.DocItems.Count); i < 5; i++)
                            {
                                <tr>
                                    <th>-</th>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td><span class="label label-info">-</span></td>

                                </tr>

                            }
                        }
                        else
                        {
                            for (int i =0; i < 5; i++)
                            {
                                <tr>
                                    <th>-</th>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td><span class="label label-info">-</span></td>

                                </tr>

                            }


                        }




                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.box-body -->
        
        <!-- /.box-footer -->
        <div class="box-footer clearfix">
         
                <a href="@Model.BaseURL" class="label @Model.Color">View All</a>
            

        </div>
    </div>
</div>