@model UserInterface.Models.TopCustomersViewModel

<div class="col-md-6">

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Top 5 Customers</h3>
            <span>Last 365 Days</span>

        </div>
        <!-- /.box-header -->
        <div class="with-border bg-yellow" style="height:2px!important"></div>
        <div class="box-body">
            <div class="table-responsive">
                <table class="table no-margin">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th class="text-center">Sales</th>
                            <th>Last Invoice Date</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Docs != null)
                        {
                            if (Model.Docs.DocItems != null)
                            {
                                for (int i = 0; i < Model.Docs.DocItems.Count; i++)
                                {
                                    <tr>
                                        
                                        <td><a href="@Model.Docs.DocItems[i].URL">@Model.Docs.DocItems[i].Customer</a></td>
                                        <td class="text-right">@Model.Docs.DocItems[i].ValueFormatted</td>                                        
                                        <td><span class="label label-success">@Model.Docs.DocItems[i].CreatedDateFormatted</span></td>

                                    </tr>

                                }
                            }

                        }
                        @if (Model.Docs != null)
                        {
                            for (int i = (Model.Docs.DocItems == null ? 0 : Model.Docs.DocItems.Count); i < 5; i++)
                            {
                                <tr>
                                    <th>-</th>
                                    <td>-</td>                                    
                                    <td><span class="label label-success">-</span></td>

                                </tr>

                            }
                        }
                        else
                        {
                            for (int i = 0; i < 5; i++)
                            {
                                <tr>
                                  
                                    <td>-</td>
                                    <td>-</td>
                                    <td><span class="label label-success">-</span></td>

                                </tr>

                            }


                        }

                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">

            <a href="../Customers" class="label label-info">View All Customers</a>
        </div>
        <!-- /.box-footer -->
    </div>
</div>