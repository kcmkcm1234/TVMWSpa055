@model UserInterface.Models.OtherExpenseViewModel
@using UserInterface.App_Start
@{
    ViewBag.Title = "Other Expenses";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatable")


}
<div style="width:100%;">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-truck"></i> Sales</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div>

<section class="content" id="main">
    <div class="row">
        <div class="" id="btnPatchAttributeSettab" style="min-height:25px">

            @{
                var data = new { ActionType = "List" };
                @Html.Action("ChangeButtonStyle", "CustomerCreditNote", data);
            }
        </div>
    </div>
    <div class="row summaryboxes">

        <div class="clearfix visible-sm-block"></div>

    </div>
    <div class="row">
        &nbsp;
    </div>
    <div class="row tableContainer">
        <div class="col-md-12">
            <table id="CustomerCreditNoteTable" class="table table-striped table-bordered table-hover customgrd" cellspacing="0" width="100%">
                <thead>
                    <tr class="text-center TableHead">
                        <th>ID</th>
                        <th>Expense Date</th>
                        <th>Account</th>
                        <th>Paid From Company</th>
                        <th>Employee</th>
                        <th>Payment Mode</th>
                        <th>Amount</th>
                        <th>...</th>

                    </tr>
                </thead>
                <tbody>
                    <tr><td>345</td><td>02-May-2017</td><td>Accountno</td><td>Keltek pvt Ltd</td><td>anand</td>
                    <td>Bank</td><td>454343.00</td><td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</section>

<section class="content">


    <div id="myNav" class="overlay">



        <div class="overlay-content">

            <div class="row" id="OverlayHeader">
                <div class="col-md-6" style="text-align:left">
                    <span id="lblInvoiceNo" class="SCHeader">Other Expenses</span>
                </div>
                <div class="col-md-6" id="btnPatchAdd" style="min-height:25px; padding-right:25px;">

                    @{
                        var data1 = new { ActionType = "Add" };
                        @Html.Action("ChangeButtonStyle", "CustomerCreditNote", data1);
                    }
                </div>
            </div>

            <div class="EntryForms" style="height:550px">
                @using (Ajax.BeginForm("InsertUpdateCreditNote", "CustomerCreditNote", new AjaxOptions { HttpMethod = "POST", Confirm = "", OnSuccess = "SaveSuccess", OnFailure = "NetworkFailure", AllowCache = false, LoadingElementId = "", OnBegin = "", OnComplete = "" }, new { @class = "form-horizontal", role = "form", @id = "CustomerCreditNoteForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="col-md-12">
                        <div class="col-md-4">

                         

                            <div class="form-group col-md-12">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.CRNDateFormatted, htmlAttributes: new { @class = "control-label" })


                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.CRNDateFormatted, new { htmlAttributes = new { @class = "form-control HeaderBox BlockEnter datepicker", @id = "CreditNoteDate" } })
                                        @Html.ValidationMessageFor(model => model.CRNDateFormatted, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                </div>

                            </div>


                        </div>
                        <div class="col-md-4" id="CommonFigure" style="padding-top:2%;border-left:1px solid #64e564;white-space:nowrap;">
                            <div class="col-md-4" style="padding-top:2%">
                                <div class="form-group col-md-12">
                                    <div class="col-md-12 text-right">
                                        <div class="rightAmtCaption">Total Amount</div>
                                    </div>
                                    <div class="col-md-12 text-right">
                                        <div class="rightAmt" id="creditdAmt">₹ 0.00</div>
                                    </div>
                                </div>
                               

                            </div>
                            </div>

                        </div>
                    <div class="col-md-12  ">&nbsp;</div>
                    <div class="col-md-12  ">&nbsp;</div>
                    <div class="col-md-12 headSeperator"><i class="fa fa-th ig-aqua" aria-hidden="true"></i> Expense Details</div>

                    <div class="col-md-12">
                       
                        <div class="col-md-12">
                            <table id="Table" class="table table-striped table-bordered table-hover customgrd" cellspacing="0" width="100%">
                                <thead>
                                    <tr class="text-center TableHead">
                                        <th>SI No</th>
                                        <th>Account</th>
                                        <th>Payment mode</th>
                                        <th>Description</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                    </div>
               

                    <div class="col-md-12  ">&nbsp;</div>
                    <div class="col-md-12  ">&nbsp;</div>
                    <div class="col-md-12  ">&nbsp;</div>
                    <div class="col-md-12  ">&nbsp;</div>
                    <div class="col-md-12  ">&nbsp;</div>
                    <div class="col-md-12  ">&nbsp;</div>
                }
            </div>
        </div>

    </div>
    <div class="preloader" id="prelaoder">
        <div class="col-md-12">
            <div class="col-md-12">Loading </div>
            <div class="col-md-12" style="margin-left:5%;margin-top:-3%;"><img src="~/Content/images/loading.gif" class="preloaderImg" /></div>
        </div>

    </div>
</section>

@section Scripts {
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatable")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/jqueryunobtrusiveajaxvalidate")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/CustomerCreditNote")
}
