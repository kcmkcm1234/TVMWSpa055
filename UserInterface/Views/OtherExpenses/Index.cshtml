@model UserInterface.Models.OtherExpenseViewModel
@using UserInterface.App_Start
@{
    ViewBag.Title = "Other Expenses";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatable")


}
<div style="width:100%;">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-truck"></i> Sales</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div>

<section class="content">
    <div class="row" id="OverlayHeader">
        <div class="col-md-6" style="text-align:left">

        </div>
        <div class="col-md-6" id="btnPatchAdd" style="min-height:25px; padding-right:25px;">

            @{
                var data = new { ActionType = "Add" };
                @Html.Action("ChangeButtonStyle", "OtherExpenses", data);
            }
        </div>
    </div>

    <div id="myNav">



        <div class="overlay-content">



            <div class="EntryForms" style="height:550px">
                @using (Ajax.BeginForm("InsertUpdateCreditNote", "CustomerCreditNote", new AjaxOptions { HttpMethod = "POST", Confirm = "", OnSuccess = "SaveSuccess", OnFailure = "NetworkFailure", AllowCache = false, LoadingElementId = "", OnBegin = "", OnComplete = "" }, new { @class = "form-horizontal", role = "form", @id = "CustomerCreditNoteForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="">

                        <div class="form-group col-md-6" style="padding-left: 0px;">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.CRNDateFormatted, htmlAttributes: new { @class = "control-label" })


                            </div>
                            <div class="col-md-12">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CRNDateFormatted, new { htmlAttributes = new { @class = "form-control HeaderBox BlockEnter datepicker", @id = "CreditNoteDate" } })
                                    @Html.ValidationMessageFor(model => model.CRNDateFormatted, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-1"></div>
                                <div class="col-md-1"></div>
                            </div>

                        </div>

                        <div class="col-md-4" id="CommonFigure" style="padding-top:2%;border-left:1px solid #64e564;white-space:nowrap;">
                            <div class="col-md-4" style="padding-top:2%">
                                <div class="form-group col-md-12">
                                    <div class="col-md-12 text-right">
                                        <div class="rightAmtCaption">Total Amount</div>
                                    </div>
                                    <div class="col-md-12 text-right">
                                        <div class="rightAmt" id="creditdAmt">₹ 0.00</div>
                                    </div>
                                </div>


                            </div>
                        </div>

                    </div>
                    <div class="col-md-12  ">&nbsp;</div>
                        <div class="col-md-12  ">&nbsp;</div>
                        <div class="col-md-12 headSeperator"><i class="fa fa-th ig-aqua" aria-hidden="true"></i> Expense Details</div>



                        <div class="container-fluid">
                            <table id="expenseDetailTable" class="table table-striped table-bordered table-hover customgrd" cellspacing="0" width="100%">
                                <thead>
                                    <tr class="text-center TableHead">
                                        <th>SI No</th>
                                        <th>Account</th>
                                        <th>Payment mode</th>
                                        <th>Description</th>
                                        <th>Amount</th>
                                        <th>...</th>
                                        <th>ID</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>




                            <div class="col-md-12  ">&nbsp;</div>
                            <div class="col-md-12  ">&nbsp;</div>
                            <div class="col-md-12  ">&nbsp;</div>
                            <div class="col-md-12  ">&nbsp;</div>
                            <div class="col-md-12  ">&nbsp;</div>
                            <div class="col-md-12  ">&nbsp;</div>
                }
            </div>
        </div>

    </div>
    <div class="preloader" id="prelaoder">
        <div class="col-md-12">
            <div class="col-md-12">Loading </div>
            <div class="col-md-12" style="margin-left:5%;margin-top:-3%;"><img src="~/Content/images/loading.gif" class="preloaderImg" /></div>
        </div>

    </div>

    @*Model*@
