                                        <div class="col-md-1"></div>
                                    </div>

                                </div>

                                <div class="form-group col-md-12">
                                    <div class="col-md-12">
                                        @*@Html.LabelFor(model => model.CreditNoteNo, htmlAttributes: new { @class = "control-label" })*@
                                        @Html.Label("name")

                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-10">
                                            @*@Html.EditorFor(model => model.CreditNoteNo, new { htmlAttributes = new { @class = "form-control HeaderBox", @id = "CreditNoteNo", @autofocus = true } })*@
                                            @Html.Editor("name")
                                            @*@Html.ValidationMessageFor(model => model.CreditNoteNo, "", new { @class = "text-danger" })*@
                                        </div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-1"></div>
                                    </div>

                                </div>

                                <div class="form-group col-md-12">
                                    <div class="col-md-12">
                                        @*@Html.LabelFor(model => model.CreditNoteNo, htmlAttributes: new { @class = "control-label" })*@
                                        @Html.Label("name")

                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-10">
                                            @*@Html.EditorFor(model => model.CreditNoteNo, new { htmlAttributes = new { @class = "form-control HeaderBox", @id = "CreditNoteNo", @autofocus = true } })*@
                                            @Html.Editor("name")
                                            @*@Html.ValidationMessageFor(model => model.CreditNoteNo, "", new { @class = "text-danger" })*@
                                        </div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-1"></div>
                                    </div>

                                </div>


                            </div>
                            <div class="col-md-4">
                                <div class="form-group col-md-12">
                                    <div class="col-md-12">
                                        @*@Html.LabelFor(model => model.CreditNoteNo, htmlAttributes: new { @class = "control-label" })*@
                                        @Html.Label("name")

                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-10">
                                            @*@Html.EditorFor(model => model.CreditNoteNo, new { htmlAttributes = new { @class = "form-control HeaderBox", @id = "CreditNoteNo", @autofocus = true } })*@
                                            @Html.Editor("name")
                                            @*@Html.ValidationMessageFor(model => model.CreditNoteNo, "", new { @class = "text-danger" })*@
                                        </div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-1"></div>
                                    </div>

                                </div>

                            </div>



                        </div>

                        <div class="col-md-12  ">&nbsp;</div>
                    }
                </div>





            </div>
        </div>
    </div>
</section>



@section Scripts {
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatable")
