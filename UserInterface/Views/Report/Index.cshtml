@using UserInterface.Models;
@model IEnumerable<SystemReportViewModel>
@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<div style="width:100%;">
    <ol class="breadcrumb">
        <li><i class="fa fa-print"></i> @ViewBag.Title</li>
    </ol>
</div>


<div class="container-fluid">
    <div class="row">
        <div>
     
       <br/>
        <br/>
            <div class="col-md-12">
                @{
                    if (Model != null)
                    {
                        foreach (SystemReportViewModel svm in Model.GroupBy(elem => elem.ReportGroup).Select(group => group.First()))
                        {
                            <div class="col-md-12">
                                <div class="col-md-12 headSeperator" style="margin-left:0%;width:100%;"><i class="fa fa-th ig-yellow" aria-hidden="true"></i> @svm.ReportGroup</div>
                               @foreach (SystemReportViewModel subsvm in Model.Where(s=>s.GroupOrder==svm.GroupOrder).OrderBy(os=>os.ReportOrder))
                                {
                                <div class="col-md-4">
                                    <h4> @subsvm.ReportName </h4>
                                    <p>
                                        @subsvm.ReportDescription
                                    </p>
                                 
                                        <ul class="pager">
                                           
                                            <li style="font-size:14px;" class="next"><a href="/@svm.Controller/@subsvm.Action">Run <span aria-hidden="true">&rarr;</span></a></li>
                                        </ul>
                                        @*<a href="/@svm.Controller/@subsvm.Action" class="btn btn-link">Run </a>*@
                                   

                                </div>
                                }
                                
                                </div>
                                }

                                }

                                }


                            </div>
        </div>
    </div>
</div>