@model UserInterface.Models.SalesTransactionLogReportViewModel
@using UserInterface.App_Start
@{
    ViewBag.Title = "Sales Transaction Log";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatable")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatableButtons")
}

<div style="width:100%;">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-truck"></i> Reports</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div>



<div class="preloader" id="prelaoder">
    <div class="col-md-12">
        <div class="col-md-12">Loading </div>
        <div class="col-md-12" style="margin-left:5%;margin-top:-3%;"><img src="~/Content/images/loading.gif" class="preloaderImg" /></div>
    </div>

</div>
<div class="col-md-12">
    &nbsp;
    &nbsp;
    &nbsp;
    &nbsp;
    &nbsp;
    &nbsp;
</div>
<div class="form-horizontal">

    <div class="col-md-9" style="margin-top:10px;">
        <div class="col-md-3">
            @Html.Label("From Date", htmlAttributes: new { @class = "control-label" })
            <div class="col-md-12">
                @Html.TextBox("fromdate", "", new { @class = "form-control datepicker HeaderBox BlockEnter col-md-3", @onchange = "RefreshSalesTransactionLogTable()", @Value = ViewBag.fromdate })


            </div>
        </div>
        <div class="col-md-3">
            @Html.Label("To Date", htmlAttributes: new { @class = "control-label" })
            <div class="col-md-12">
                @Html.TextBox("todate", "", new { @class = "form-control datepicker HeaderBox BlockEnter col-md-3", @onchange = "RefreshSalesTransactionLogTable()", @Value = ViewBag.todate })
            </div>
        </div>
        <div class="col-md-3">
            @Html.LabelFor(model => model.CompanyCode, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-12">
                @Html.DropDownListFor(model => model.CompanyCode, Model.CompanyList, "-- Select Company --", new { @class = "form-control BlockEnter", @onchange = "RefreshSalesTransactionLogTable()", value = -1, style = "padding:4px 12px;", @id = "CompanyCode" })
                @Html.ValidationMessageFor(model => model.CompanyCode, "", new { @class = "text-danger" })

            </div>
        </div>
     
    </div>
    <div class="col-md-3" style="min-height:25px">
        @{
            var data = new { ActionType = "List" };
            @Html.Action("ChangeButtonStyle", "Report", data);
        }
    </div>
    <div class="row summaryboxes">

        <div class="clearfix visible-sm-block">

        </div>

    </div>
    <div class="row">
        &nbsp;
    </div>
    <div class="row tableContainer">
        <div class="col-md-12" id="AHContainer">
            <table id="salesTransactionTable" class="table stripe" cellspacing="0" width="100%">
                <thead>
                    <tr class="text-center TableHead">
                        <th>OriginatedCompany</th>
                        <th>Doc No.</th>
                        <th>Document Date</th>
                        <th>Transaction Type</th>
                        <th>Amount</th>
                        <th>Origin Company</th>
                    </tr>
                </thead>
            </table>
        </div>
    
    </div>

</div>
@section Scripts {
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatable")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/jsZip")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatableButtons")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/SalesTransactionLogReport")
}






